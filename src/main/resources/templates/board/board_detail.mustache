{{>layouts/header}}
{{#board}}
    <h4>제목:{{title}}</h4>
    <h4>id:{{id}}</h4>
    <h4>작성자:{{author.username}}</h4>
    <hr>
    <p><img src="/img/{{image_url}}" alt="이미지" width="280px" /></p>
    <h4>설명</h4>
    <div>{{content}}</div>
    {{#isLoggedIn}}
        {{#isNotBoardAuthor}}
            <form action="/chat/startByOpponentId/{{author.id}}" method="get">
                <button type="submit">작성자와 채팅 시작!</button>
            </form>
        {{/isNotBoardAuthor}}
    {{/isLoggedIn}}
    {{^isLoggedIn}}
        <form action="/login" method="get">
            <button type="submit">채팅을 시작하려면 로그인 하세요!</button>
        </form>
    {{/isLoggedIn}}
{{/board}}
<hr>
<form action="/board/list" method="get">
    <button type="submit">판매글 목록으로</button>
</form>
{{>layouts/footer}}